@model List<SimpleLibrary.Models.AdminViewModels.AdminUserListViewModel>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">Users</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle me-2"></i>Create New User
        </a>
    </div>

<table>
    <thead>
    <tr>
        <th>UserName</th>
        <th>Email</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Email</td>
            <td>
                <a asp-action="Edit" asp-route-id="@user.Id">Edit</a> |
                <form asp-action="Delete" asp-route-id="@user.Id" method="post" style="display:inline;">
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>
</div>
