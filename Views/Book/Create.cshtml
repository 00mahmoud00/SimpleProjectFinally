@model SimpleLibrary.ViewModels.BookViewModel
@{
    ViewData["Title"] = "Create Book";
}

<h2>Create Book</h2>

<form asp-action="Create" enctype="multipart/form-data" method="post"> 
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control"/>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AuthorId" class="control-label"></label>
        <select asp-for="AuthorId" class="form-control" asp-items="ViewBag.AuthorList"></select>
        <span asp-validation-for="AuthorId" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="ImageFile" class="form-label">Author Image</label>
        <input asp-for="ImageFile" type="file" class="form-control" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Action("Index", "Book")" class="btn btn-secondary">Back to List</a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}